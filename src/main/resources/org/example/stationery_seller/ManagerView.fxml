<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.stationery_seller.ManagerController">
    <top>
        <MenuBar nodeOrientation="LEFT_TO_RIGHT">
            <Menu mnemonicParsing="false" text="Файл">
                <MenuItem mnemonicParsing="false" text="Выйти из аккаунта" onAction="#onAccountExit"/>
                <MenuItem mnemonicParsing="false" text="Закрыть" onAction="#onExit"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Помощь">
                <MenuItem mnemonicParsing="false" text="О приложении" onAction="#onAbout"/>
            </Menu>
        </MenuBar>
    </top>


    <center>
        <TableView fx:id="itemsTable">
        <columns>
            <TableColumn fx:id="colId" text="ID" maxWidth="120" resizable="false" reorderable="false"/>
            <TableColumn fx:id="colName" text="Название" reorderable="false"/>
            <TableColumn fx:id="colPrice" text="Цена" maxWidth="400" resizable="false" reorderable="false"/>
            <TableColumn fx:id="colQuantity" text="Количество" maxWidth="1000" resizable="false" reorderable="false"/>
            <TableColumn fx:id="colCategory" text="Категория" maxWidth="1000" resizable="false" reorderable="false"/>
            <TableColumn fx:id="colBarcode" text="Штрихкод" minWidth="100" resizable="false" reorderable="false"/>
        </columns>
    </TableView>
    </center>

    <bottom>
        <HBox spacing="50">
            <padding>
                <Insets top="20"/>
            </padding>
            <Button onAction="#editItem" text="Редактировать товар" />
            <Button onAction="#refresh" text="Обновить"/>
            <Button onAction="#addItem" text="Добавить товар"/>
            <Button onAction="#deleteItem" text="Удалить товар"/>
            <Button onAction="#addCategory" text="Добавить категорию"/>
            <Button onAction="#deleteCategory" text="Удалить категорию"/>

        </HBox>
    </bottom>

</BorderPane>